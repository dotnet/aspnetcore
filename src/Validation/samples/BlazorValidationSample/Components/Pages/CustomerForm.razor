@page "/customer-form"
@rendermode InteractiveServer

@using BlazorValidationSample.Models

<h1>Customer Form</h1>

<p>Demonstrates Required, StringLength, EmailAddress, Range, Phone, and Display attribute validation.</p>

<EditForm Model="customer" OnValidSubmit="HandleValidSubmit" FormName="CustomerForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="name">Name</label>
        <InputText id="name" @bind-Value="customer.Name" />
        <ValidationMessage For="() => customer.Name" />
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <InputText id="email" @bind-Value="customer.Email" />
        <ValidationMessage For="() => customer.Email" />
    </div>

    <div class="form-group">
        <label for="age">Age</label>
        <InputNumber id="age" @bind-Value="customer.Age" />
        <ValidationMessage For="() => customer.Age" />
    </div>

    <div class="form-group">
        <label for="phone">Phone</label>
        <InputText id="phone" @bind-Value="customer.Phone" />
        <ValidationMessage For="() => customer.Phone" />
    </div>

    <button type="submit" class="btn-submit">Submit</button>
</EditForm>

@if (submitted)
{
    <div class="success-message">
        <strong>Success!</strong> Customer &ldquo;@customer.Name&rdquo; submitted successfully.
    </div>
}

@code {
    private CustomerModel customer = new();
    private bool submitted;

    private void HandleValidSubmit()
    {
        submitted = true;
    }
}
