<Project>
    <!--
        This file ensures the template projects are independent from the
        template package build config and prevents NuGet from trying to
        restore them during the repo build.
    -->
    <PropertyGroup>
        <!-- Prevent NuGet from restoring this project - it's template content, not a real project -->
        <RestoreProjectStyle>None</RestoreProjectStyle>
        <IsRestorableProject>false</IsRestorableProject>
    </PropertyGroup>
</Project>
